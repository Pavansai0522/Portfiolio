{
  "name": "portfolio-app",
  "version": "1.0.0",
  "description": "Portfolio website with Angular and Tailwind CSS",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "start:backend": "node server.js",
    "start:dev": "concurrently \"npm run start:backend\" \"npm start\"",
    "build": "ng build",
    "build:prod": "npx ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy:build": "npm run build:prod && npm run start:backend"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.0.3",
    "nodemailer": "^7.0.12",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/node": "^20.10.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "sass": "^1.97.2",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.2.2"
  }
}
